<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zilvinastomkevicius.nostarve4u">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/carrot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/carrot"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.ProductListActivity"
            android:label="What products do you have?" />
        <activity
            android:name=".Activities.RecipeListActivity"
            android:label="Choose a recipe" />
        <activity
            android:name=".Activities.RecipeDetailsActivity"
            android:label="Recipe Details" />
        <activity
            android:name=".Activities.AddRecipeActivity"
            android:label="Add a new recipe"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".Activities.AddProductActivity"></activity>
    </application>

</manifest>