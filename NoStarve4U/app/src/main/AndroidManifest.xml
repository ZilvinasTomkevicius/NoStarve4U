<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zilvinastomkevicius.nostarve4u">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/carrot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/carrot"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.ProductListActivity"
            android:label="What products do you have?" />
        <activity
            android:name=".Activities.RecipeListActivity"
            android:label="Choose a recipe" />
        <activity
            android:name=".Activities.RecipeDetailsActivity"
            android:label="Recipe Details" />
        <activity
            android:name=".Activities.AddRecipeActivity"
            android:label="Add a new recipe"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".Activities.LaunchingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.MyRecipesActivity" />
        <activity android:name=".Activities.MainActivity"></activity>
    </application>

</manifest>