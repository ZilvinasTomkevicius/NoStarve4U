<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zilvinastomkevicius.nostarve4u.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="IntentToProductListActivity"
            android:text="Search for a recipe"
            android:layout_margin="50dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonAddRecipe"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:onClick="IntentToAddRecipeActivity"
                android:text="Add a recipe"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="15dp" />

            <Button
                android:id="@+id/buttonMyRecipes"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:onClick="IntentToMyRecipesActivity"
                android:text="My recipes"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="50dp" />

        </LinearLayout>

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
