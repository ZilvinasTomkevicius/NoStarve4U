<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zilvinastomkevicius.nostarve4u.Fragments.ProductListFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/advent_pro"
        android:gravity="center_horizontal"
        android:text="What products do you have?"
        android:textColor="#00bf9a"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <ListView
            android:id="@+id/productListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="0.7"
            android:background="#e8b2b2"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:fadingEdgeLength="5dp"
            android:layerType="software"
            android:paddingLeft="10dp"
            android:pointerIcon="text">

        </ListView>

    </LinearLayout>

    <Button
        android:id="@+id/buttonMatches"
        android:layout_width="320dp"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:alpha="0.7"
        android:background="#00bf9a"
        android:textColor="#ffffff"
        android:elegantTextHeight="true"
        android:text="Proceed" />

    <ProgressBar
        android:id="@+id/productListLoadingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true" />

</RelativeLayout>
